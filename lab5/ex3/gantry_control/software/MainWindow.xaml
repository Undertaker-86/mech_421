<Window x:Class="GantryControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="2-Axis Gantry Control" Height="500" Width="800" Background="#1E1E1E" Foreground="White">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Control Panel -->
        <StackPanel Grid.Column="0" Margin="0,0,20,0">
            <GroupBox Header="Connection" Foreground="White" BorderBrush="#444" Padding="10">
                <StackPanel>
                    <ComboBox x:Name="PortSelector" Margin="0,0,0,10" Height="30"/>
                    <Button x:Name="ConnectBtn" Content="Connect" Click="ConnectBtn_Click" Height="30" Background="#007ACC" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Manual Control" Foreground="White" BorderBrush="#444" Padding="10" Margin="0,20,0,0">
                <StackPanel>
                    <TextBlock Text="X Distance (cm)" Foreground="#AAA"/>
                    <TextBox x:Name="XInput" Text="0" Background="#333" Foreground="White" BorderThickness="0" Padding="5" Margin="0,5,0,10"/>

                    <TextBlock Text="Y Distance (cm)" Foreground="#AAA"/>
                    <TextBox x:Name="YInput" Text="0" Background="#333" Foreground="White" BorderThickness="0" Padding="5" Margin="0,5,0,10"/>

                    <TextBlock Text="Velocity (%)" Foreground="#AAA"/>
                    <Grid Margin="0,5,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>
                        <Slider x:Name="VelSlider" Grid.Column="0" Minimum="1" Maximum="100" Value="50" TickFrequency="10" IsSnapToTickEnabled="False" Margin="0,0,10,0" ValueChanged="VelSlider_ValueChanged"/>
                        <TextBox x:Name="VelInput" Grid.Column="1" Text="50" Background="#333" Foreground="White" BorderThickness="0" Padding="5" TextAlignment="Center" TextChanged="VelInput_TextChanged"/>
                    </Grid>
                    <TextBlock Text="{Binding ElementName=VelSlider, Path=Value, StringFormat='Speed: {0}%'}" HorizontalAlignment="Right" Foreground="#AAA"/>

                    <Button Content="Move" Click="MoveBtn_Click" Height="40" Background="#28A745" Foreground="White" BorderThickness="0" Margin="0,10,0,0"/>
                    <Button Content="Stop" Click="StopBtn_Click" Height="40" Background="#DC3545" Foreground="White" BorderThickness="0" Margin="0,10,0,0"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- Demo Panel -->
        <!-- Right Panel -->
        <TabControl Grid.Column="1" Margin="0,0,0,0" Background="#252526" BorderThickness="0">
            <TabItem Header="History" Background="#333" Foreground="White">
                <GroupBox Header="Command History" Foreground="White" BorderBrush="#444" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <ListBox x:Name="HistoryList" Grid.Row="0" Background="#333" Foreground="White" BorderThickness="0" Margin="0,0,0,10"/>
                        
                        <Button Grid.Row="1" Content="Clear History" Click="ClearHistoryBtn_Click" Height="30" Background="#DC3545" Foreground="White" BorderThickness="0" Margin="0,0,0,10"/>
                        
                        <TextBlock x:Name="StatusText" Grid.Row="2" Text="Ready" Foreground="#888" FontStyle="Italic"/>
                    </Grid>
                </GroupBox>
            </TabItem>
            
            <TabItem Header="Drawing" Background="#333" Foreground="White">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="Set Center" Click="SetCenterBtn_Click" Width="100" Height="30" Margin="0,0,10,0" Background="#17A2B8" Foreground="White" BorderThickness="0"/>
                        <Button Content="Go to Center" Click="GoToCenterBtn_Click" Width="100" Height="30" Margin="0,0,10,0" Background="#17A2B8" Foreground="White" BorderThickness="0"/>
                    </StackPanel>

                    <Border Grid.Row="1" BorderBrush="#555" BorderThickness="1" Width="302" Height="302" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Grid Width="300" Height="300" Background="White">
                            <Image x:Name="TraceImage" Stretch="Fill"/>
                            <InkCanvas x:Name="DrawingCanvas" Background="Transparent" Width="300" Height="300"/>
                        </Grid>
                    </Border>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="Import Image" Click="ImportImageBtn_Click" Width="100" Height="30" Margin="0,0,10,0" Background="#6C757D" Foreground="White" BorderThickness="0"/>
                        <Button Content="Clear" Click="ClearBtn_Click" Width="80" Height="30" Margin="0,0,10,0" Background="#DC3545" Foreground="White" BorderThickness="0"/>
                        <Button Content="Trace Drawing" Click="TraceBtn_Click" Width="120" Height="30" Background="#28A745" Foreground="White" BorderThickness="0" Margin="0,0,10,0"/>
                        <Button Content="Stop" Click="StopDrawingBtn_Click" Width="80" Height="30" Background="#DC3545" Foreground="White" BorderThickness="0"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Image Processing" Background="#333" Foreground="White">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="Set Center" Click="SetCenterBtn_Click" Width="100" Height="30" Margin="0,0,10,0" Background="#17A2B8" Foreground="White" BorderThickness="0"/>
                        <Button Content="Go to Center" Click="GoToCenterBtn_Click" Width="100" Height="30" Margin="0,0,10,0" Background="#17A2B8" Foreground="White" BorderThickness="0"/>
                    </StackPanel>

                    <Border Grid.Row="1" BorderBrush="#555" BorderThickness="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,10">
                        <Image x:Name="ProcImage" Stretch="Uniform"/>
                    </Border>

                    <StackPanel Grid.Row="2" Orientation="Vertical">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Button Content="Import Image" Click="ProcImportBtn_Click" Width="100" Height="30" Margin="0,0,10,0" Background="#6C757D" Foreground="White" BorderThickness="0"/>
                            <Button Content="Convert to Drawing" Click="ProcConvertBtn_Click" Width="140" Height="30" Margin="0,0,10,0" Background="#FFC107" Foreground="Black" BorderThickness="0"/>
                            <CheckBox x:Name="HighResCheck" Content="High Resolution" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Draw Edges" Click="ProcDrawBtn_Click" Width="120" Height="30" Background="#28A745" Foreground="White" BorderThickness="0" Margin="0,0,10,0"/>
                            <Button Content="Stop" Click="StopDrawingBtn_Click" Width="80" Height="30" Background="#DC3545" Foreground="White" BorderThickness="0"/>
                            <TextBlock x:Name="ProcStatusText" Text="Ready" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="#AAA"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
